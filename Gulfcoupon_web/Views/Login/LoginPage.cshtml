@model Gulfcoupon_web.Models.UserModel

@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_Layoutmaster.cshtml";
}

<h2>LoginPage</h2>
@if (@ViewBag.Failedcount != null)
{
    <div class="alert alert-success">
       @ViewBag.Failedcount
    </div>
}
@if (@ViewBag.NotValidUser != null)
{
    <div class="alert alert-danger">
        @ViewBag.NotValidUser
    </div>
}
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            @using (Html.BeginForm(FormMethod.Post))
                {
    
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">*@
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", name = "username", value = "", placeholder = "username or email" } })*
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @*<input id="login-password" type="password" class="form-control" name="password" placeholder="password">*@
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", name = "password", placeholder = "password" } })*
                        @Html.ValidationMessageFor(model => model.Password)


                    </div>


                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="loginbtn">

                            <input id="login" type="submit" value="Login" class="btn btn-primary" />

                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
    
</div>

<script type="text/javascript">
function disableBackButton()
{window.history.forward();}
setTimeout("disableBackButton()", 0);
</script>
  